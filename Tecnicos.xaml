<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agendamento.TecnicosPage"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f0f9ff" Offset="0.0" />
            <GradientStop Color="#e1f2ff" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20"
              RowSpacing="15"
              MinimumHeightRequest="{OnPlatform Android=800, iOS=800}">

            <!-- Cabeçalho -->
            <VerticalStackLayout Grid.Row="0" 
                                Spacing="10" 
                                Margin="0,20,0,10">
                <Label Text="Técnicos"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2b2b2b"
                       HorizontalOptions="Center" />
                
                <Label Text="Selecione um técnico"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
            </VerticalStackLayout>

            <!-- Lista de Técnicos -->
            <StackLayout Grid.Row="1" 
                        x:Name="TecnicosLayout"
                        Spacing="15"
                        Margin="0,10">
                
                <!-- Os botões serão adicionados programaticamente -->
                <Button Text="Wanderson" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <!-- Repetir o mesmo padrão para os outros técnicos -->
                <Button Text="Guilherme" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Text="Paulo" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Text="Jessica" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Text="Gerson" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Text="Vinicius" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Text="Reginaldo" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Text="Joao" 
                        FontSize="18"
                        TextColor="#ffffff"
                        BackgroundColor="Transparent"
                        Clicked="OnTecnicoSelected"
                        Pressed="OnTecnicoPressed"
                        Released="OnTecnicoReleased">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4CAF50" Offset="0.0" />
                            <GradientStop Color="#45a049" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

            </StackLayout>

            <!-- Rodapé -->
            <Label Grid.Row="2"
                   Text="© 2024 RR INFRA"
                   TextColor="#666666"
                   FontSize="12"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="0,10,0,5" />
        </Grid>
    </ScrollView>
</ContentPage>
