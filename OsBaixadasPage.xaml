<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agendamento.OsBaixadasPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f0f9ff" Offset="0.0" />
            <GradientStop Color="#e1f2ff" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20"
              RowSpacing="15"
              MinimumHeightRequest="{OnPlatform Android=800, iOS=800}">
            
            <!-- Cabeçalho -->
            <VerticalStackLayout Grid.Row="0" 
                                Spacing="10" 
                                Margin="0,20,0,10">
                <Label Text="O.S. Baixadas"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2b2b2b"
                       HorizontalOptions="Center" />
                
                <Label Text="Lista de O.S. baixadas no dispositivo"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
            </VerticalStackLayout>

            <!-- Lista de O.S. -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout x:Name="ClientesLayout"
                                   Spacing="15"
                                   Padding="10"
                                   Margin="0,10">
                    <!-- Os botões serão adicionados programaticamente -->
                </VerticalStackLayout>
            </ScrollView>

            <!-- Rodapé -->
            <Label Grid.Row="2"
                   Text="© 2024 RR INFRA"
                   TextColor="#666666"
                   FontSize="12"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="0,10,0,5" />
        </Grid>
    </ScrollView>
</ContentPage>
