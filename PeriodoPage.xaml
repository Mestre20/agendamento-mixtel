<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agendamento.PeriodoPage">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f0f9ff" Offset="0.0" />
            <GradientStop Color="#e1f2ff" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20"
              RowSpacing="15"
              MinimumHeightRequest="{OnPlatform Android=800, iOS=800}">
            
            <!-- Cabeçalho -->
            <VerticalStackLayout Grid.Row="0" 
                                Spacing="10" 
                                Margin="0,20,0,10">
                <Label Text="Período"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2b2b2b"
                       HorizontalOptions="Center" />
                
                <Label Text="Selecione o período"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
            </VerticalStackLayout>

            <!-- Botões de Período -->
            <VerticalStackLayout Grid.Row="1" 
                                Spacing="20" 
                                VerticalOptions="Center"
                                Margin="0,10">
                
                <!-- Botão Manhã -->
                <Frame CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       Padding="0"
                       HeightRequest="70"
                       Margin="10,5"
                       MaximumWidthRequest="350"
                       HorizontalOptions="Center">
                    
                    <Button Text="Manhã"
                            FontSize="22"
                            FontAttributes="Bold"
                            TextColor="#ffffff"
                            BackgroundColor="Transparent"
                            Clicked="OnPeriodoSelected">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#4CAF50" Offset="0.0" />
                                <GradientStop Color="#45a049" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Frame>

                <!-- Botão Tarde -->
                <Frame CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       Padding="0"
                       HeightRequest="70"
                       Margin="10,5"
                       MaximumWidthRequest="350"
                       HorizontalOptions="Center">
                    
                    <Button Text="Tarde"
                            FontSize="22"
                            FontAttributes="Bold"
                            TextColor="#ffffff"
                            BackgroundColor="Transparent"
                            Clicked="OnPeriodoSelected">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2196F3" Offset="0.0" />
                                <GradientStop Color="#1976D2" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Frame>
            </VerticalStackLayout>

            <!-- Rodapé -->
            <Label Grid.Row="2"
                   Text="© 2024 RR INFRA"
                   TextColor="#666666"
                   FontSize="12"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="0,10,0,5" />
        </Grid>
    </ScrollView>
</ContentPage>
